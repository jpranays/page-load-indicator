{
  "manifest_version": 3,
  "name": "Page Load Indicator",
  "version": "1.0.0",
  "description": "Shows an in-page overlay while a full page is loading.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
